<Login>:
	userName:userName                #for python code : for kivy code
	userPassword:userPassword        #for python code : for kivy code
	FloatLayout:
        Image:
            source: "graphics/loginbackground.png"
	GridLayout:
		cols:1
		size_hint: 1,.67
		padding: [30]
		spacing: [5,5]

		GridLayout:
			cols:1
			padding: [20, 30, 40, 50]
				
		TextInput:
			height: 100
			id: userName
            hint_text: "username"
            max_lines: 1
            valign: 'middle'
            halign: 'center'
            font_size: 15
			multiline: False
			size_hint: (0.4, 0.42)
				
		TextInput:
			id: userPassword
            hint_text: "password"
            max_lines: 1
            valign: 'middle'
            halign: 'center'
            font_size: 15
			multiline: False
			password: True
			size_hint: 0.4, 0.42
			
		Button:
			pos_hint:{"x":0.2,"y":0.05}
			size_hint: 0.6, 0.4
			text:"Login"
			#on_press: root.manager.current = 'homescreen' 
			on_press: root.userLogin()    #to check the login credentials
			
		GridLayout:
		Label:
			text: "Want your own Perfect Larder?"
			font_size: 15
		Button:
			size_hint: 0.4, 0.4
			#pos_hint:{"x":0,"y":0.05}
			text: "Create an Account"
			font_size: 15
			on_press: 
				root.manager.transition.direction = 'left'
				root.manager.current ='signup'