<Login>
	userName:userName                #for python code : for kivy code
	userPassword:userPassword        #for python code : for kivy code

	GridLayout:
		cols:1
		size: root.width, root.height
		padding: [20]
		GridLayout:
			cols:2
			padding: [20, 30, 40, 50]
		
			Label:
				text: "Username: "
				pos_hint: {"x":0.1, "top":0.9}
				size_hint: 0.35, 0.15
				
			TextInput:
				id: userName
				multiline: False
				pos_hint: {"x": 0.45 , "top":0.9}
				size_hint: 0.4, 0.15
				
			Label:
				text: "Password: "
				pos_hint: {"x":0.1, "top":0.9}
				size_hint: 0.35, 0.15
				
			TextInput:
				id: userPassword
				multiline: False
				password: True
				pos_hint: {"x": 0.45 , "top":0.9}
				size_hint: 0.4, 0.15
			
		Button:
			pos_hint:{"x":0.2,"y":0.05}
			size_hint: 0.6, 0.2
			text:"Login"
			#on_press: root.manager.current = 'homescreen' 
			on_press: root.userLogin()    #to check the login credentials