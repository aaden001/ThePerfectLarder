<Trends>:
	FloatLayout:
		Image:
			source: "graphics/generalbackground.png"

    Button:
        text: " "
        size_hint: (0.2, 0.07)
        pos_hint:{'x': 0.01, 'top': .99}
        on_press: root.manager.current =  'homescreen'
        on_press: root.ids.shareFoodItems.clear_widgets()
        Image:
            source:"graphics/back.png"
            center_x: self.parent.center_x
            center_y: self.parent.center_y

	GridLayout:
		cols:1
		#size: root.width, root.height

		Label:
        	text: "Trends"
        	font_size: 67
        	size_hint: (0.58, 0.05)
        	pos_hint:{'x': .33, 'top': .90}
        	halign: 'center'

		GridLayout:
			cols:1
			id: graph
			size: root.width, root.height
	#new 	
		ScrollView:
			do_scroll_x: False
			do_scroll_y: True
			size_hint: (.98,.75)
			pos_hint:{'x': 0.01, 'top': 0.92}

			GridLayout:
				id: itemTrend
				cols: 1
				size_hint_y: None
				height: self.minimum_height
				row_default_height: 175