<SignUp>:

	userName:userName							#for python code : for kivy code
	userPassword:userPassword       			#for python code : for kivy code
	userPasswordConfirm:userPasswordConfirm		#for python code : for kivy code
	userEmail:userEmail              			#for python code : for kivy code
	
	FloatLayout:
        Image:
            source: "graphics/signupbackground.png"
	GridLayout:
		cols:1
		size_hint: 1,.66
		padding: [30]
		spacing: [5,5]
		
		GridLayout:
			cols:1
			padding: [20, 30, 40, 50]

		TextInput:
			id: name
			hint_text: "Enter Your Name"
			max_lines: 1
			valign: 'middle'
            halign: 'center'
            font_size: 15
			multiline: False
			size_hint: (0.4, 0.5)

		TextInput:
			id: userEmail
            hint_text: "Enter E-mail"
            max_lines: 1
            valign: 'middle'
            halign: 'center'
            font_size: 15
			multiline: False
			pos_hint: {"x": 0.45 , "top":0.9}
			size_hint: (0.4, 0.5)

		TextInput:
			id: phone
			hint_text: "Enter Phone Number"
			max_lines: 1
			valign: 'middle'
            halign: 'center'
            font_size: 15
			multiline: False
			size_hint: (0.4, 0.5)

		TextInput:
			id: userName
            hint_text: "Enter Username"
            max_lines: 1
            valign: 'middle'
            halign: 'center'
            font_size: 15
			multiline: False
			pos_hint: {"x": 0.45 , "top":0.9}
			size_hint: (0.4, 0.5)

		TextInput:
			id: userPassword
            hint_text: "Enter Password"
            max_lines: 1
            valign: 'middle'
            halign: 'center'
            font_size: 15
			multiline: False
			password: True
			pos_hint: {"x": 0.45 , "top":0.9}
			size_hint: (0.4, 0.5)

		TextInput:
			id: userPasswordConfirm
            hint_text: "Confirm Password"
            max_lines: 1
            valign: 'middle'
            halign: 'center'
            font_size: 15
			multiline: False
			password: True
			pos_hint: {"x": 0.45 , "top":0.9}
			size_hint: (0.4, 0.5)

		Button:
			text: "Create your Larder"
			font_size: 15
			pos_hint: {"x": 0.45 , "top":0.9}
			size_hint: (0.4, 0.62)
			on_press: 
				root.createAccount()
		
		GridLayout:
		Button:
			pos_hint: {"x": 0.45 , "top":0.9}
			size_hint: (0.4, 0.62)
			text: "Already have an account?"
			font_size: 15
			on_press:
				root.manager.transition.direction = 'right' 
				root.manager.current ='userlogin'	
