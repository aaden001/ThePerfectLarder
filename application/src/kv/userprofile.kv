<Profile>:
	FloatLayout:
		Image:
			source: "graphics/generalbackground.png"
			
	GridLayout:
		cols:1
		padding: [30]
		spacing: [5, 5]
		
		Button:
            text: 'Manage Perfect Larder'
            on_press: root.manager.current = 'managepl'
            
		Button:
            text: 'Profile Settings'
            on_press: root.manager.current = 'settings'
            
		Button:
            text: 'Back To Home'
            on_press: root.manager.current = 'homescreen'
            
<Settings>:
    FloatLayout:
		Image:
			source: "graphics/generalbackground.png"
    GridLayout:
		cols:2
		padding: [30]
		spacing: [5, 5]
        
        Label:
            text: 'Measurement Values'
            
        GridLayout:
            cols:2
            ToggleButton:
                id: imperial
                text: 'Imperial'
                group: 'measurements'
                
            ToggleButton:
                id: metric
                text: 'Metric'
                group: 'measurements'
           
<ManagePL>:                                                            
	BoxLayout:
        orientation: 'vertical'
		
		Button:
            text: 'Back'
            on_press: root.manager.current = 'profile'