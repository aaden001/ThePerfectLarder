<Profile>:
	FloatLayout:
		Image:
			source: "graphics/generalbackground.png"
			
	GridLayout:
		cols:1
		padding: [30]
		spacing: [5, 5]
		
		Button:
            text: 'Manage Perfect Larder'
            font_size: 65
            on_press: root.manager.current = 'managepl'
            
		Button:
            text: 'Profile Settings'
            font_size: 65
            on_press: root.manager.current = 'settings'
        Button:
            text: 'Share Settings'
            font_size: 65
            on_press: root.manager.current = 'shareduser'
                
		Button:
            text: 'Back To Home'
            font_size: 65
            on_press:
                root.manager.current = 'homescreen'
                root.manager.transition.direction = 'right'
            
        
       
<Settings>:
    FloatLayout:
		Image:
			source: "graphics/generalbackground.png"
    Button:
	    text: ""
	    font_size: 15
	    color: 1,0,0,1
	    size_hint: (0.2, 0.05)
	    pos_hint:{'x': 0.01, 'top': .99}
	    on_press:
	        root.manager.current = 'profile'
	        root.ids.newLoc.text = ''
	        root.manager.transition.direction = 'right'
	    Image:
		    source:"graphics/back.png"
		    center_x: self.parent.center_x
		    center_y: self.parent.center_y

    Label:
		text: "Profile Settings"
		font_size: 67
		size_hint: (0.58, 0.05)
		pos_hint:{'x': 0.30, 'top': .99}
    
    GridLayout:
		cols:1
		size_hint: (.98, 0.2)
        pos_hint:{'x': 0.01, 'top': .92}
		halign: 'left'
        spacing: [10,10]
			
		GridLayout:
			cols:1
            size_hint: (.98, 0.3)            
            Label:
                text: 'Measurement Values'
                font_size: 57
                    
            GridLayout:
                cols:2
                ToggleButton:
                    font_size: 50
                    id: imperial
                    text: 'Imperial'
                    group: 'measurements'
                    allow_no_selection: False
                        
                ToggleButton:
                    font_size: 50
                    id: metric
                    text: 'Metric'
                    group: 'measurements'
                    allow_no_selection: False
                
        GridLayout:
            cols: 2
            size_hint: (0.50, 0.3)
            
            TextInput:
                id: newLoc
                font_size: 57
                    
            Button:
                text: 'Add Location'
                font_size: 57
                on_press: root.addLocation()

            Label:
                text: 'Storage Locations'
                font_size: 57

    Button:
        text: 'Submit'
        font_size: 65
		size_hint: (.98, 0.1)
		pos_hint:{'x': .01, 'top': .11}
        on_press: root.updateMeasurement()

	ScrollView:
		do_scroll_x: False
		do_scroll_y: True
		size_hint: (.98,.815)
		pos_hint:{'x': 0.01, 'top': 0.72}

		GridLayout:
			id: locations
			cols: 1
			size_hint_y: None
            height: self.minimum_height
            row_default_height: 150

<SharedUser>:
    FloatLayout:
        Image:
            source: "graphics/generalbackground.png"

    Button:
        text: " "
        size_hint: (0.2, 0.07)
        pos_hint:{'x': 0.01, 'top': .99}
        on_press:
            root.manager.current =  'profile'
            root.ids.shareList.clear_widgets()
            root.manager.transition.direction = 'right'
        Image:
            source:"graphics/back.png"
            center_x: self.parent.center_x
            center_y: self.parent.center_y

    Label:
        text: "Share Settings"
        font_size: 67
        size_hint: (0.58, 0.05)
        pos_hint:{'x': .22, 'top': .99}
        halign: 'center'

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        size_hint: (.98,.815)
		pos_hint: {'x': 0.01, 'top': 0.92}

        GridLayout:
            id: shareList
            cols: 1
            row_default_height: 100
            row_force_default: True

    GridLayout:
        cols: 2
        size_hint: (1, .12)
	    Button:
			text: "Add User"
			font_size: 65
			color: 0, 0, 255, 1
			on_press: root.submitUser()
        TextInput:
            id: usernameReceived
            hint_text: "username"
            multiline: False
            halign: 'center'
            font_size: 65
            write_tab: False

