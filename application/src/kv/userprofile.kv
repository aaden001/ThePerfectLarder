<Profile>:
	FloatLayout:
		Image:
			source: "graphics/generalbackground.png"
			
	GridLayout:
		cols:1
		padding: [30]
		spacing: [5, 5]
		
		Button:
            text: 'Manage Perfect Larder'
            on_press: root.manager.current = 'managepl'
            
		Button:
            text: 'Profile Settings'
            on_press: root.manager.current = 'settings'
            
		Button:
            text: 'Back To Home'
            on_press: root.manager.current = 'homescreen'
            
<Settings>:
    FloatLayout:
		Image:
			source: "graphics/generalbackground.png"
    ScrollView:
        do_scroll_x: False
		do_scroll_y: True
        GridLayout:
            cols:1
            size_hint_y: None
            height: self.minimum_height
            GridLayout:
                cols:2
                padding: [30]
                spacing: [5, 5]
                size_hint_y: None
                height: self.minimum_height
                
                Label:
                    text: 'Measurement Values'
                    
                GridLayout:
                    cols:2
                    ToggleButton:
                        id: imperial
                        text: 'Imperial'
                        group: 'measurements'
                        allow_no_selection: False
                        
                    ToggleButton:
                        id: metric
                        text: 'Metric'
                        group: 'measurements'
                        allow_no_selection: False
            Label:
                text: ''
                
            GridLayout:
                id: locations
                cols: 2
                size_hint_y: None
                height: self.minimum_height
                    
            GridLayout:
                cols:2
                padding: [30]
                spacing: [5, 5]
                size_hint_y: None
                height: self.minimum_height
                
                Button:
                    text: 'Submit'
                    on_press: root.updateMeasurement()
                Button:
                    text: 'Back'
                    on_press: root.manager.current = 'profile'
           
<ManagePL>:                                                            
	BoxLayout:
        orientation: 'vertical'
		
		Button:
            text: 'Back'
            on_press: root.manager.current = 'profile'