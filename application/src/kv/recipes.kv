<AddRecipe>:
	Button:
		text: "<-"
		font_size: 20
		color: 1,0,0,1
		size_hint: 0.1, 0.1
		pos_hint:{'x': 0, 'top': 1}
		on_press: root.manager.current =  'personalrecipe'
        
    Label:
		text: "Add Personal Recipe"
		font_size: 20
		size_hint: 0.8, 0.1
		pos_hint:{'x': 0.1, 'top': 1}

	ScrollView:
		do_scroll_x: False
		do_scroll_y: True
		size_hint: 1, 0.8
        pos_hint: {'top': 0.9}

		GridLayout:
			cols:1
			size_hint_y: None
			height: self.minimum_height

			GridLayout:
				cols:2
				size_hint_y: None
				height: self.minimum_height
				row_default_height: 35

				Label:
					text: "Recipe Name:"

				TextInput:
					id: name
					multiline: False

				Label:
					text: "Servings:"

				TextInput:
					id: servings
					multiline: False

				Label:
					text: "Description/Instructions:"

				TextInput:
					id: description
					size_hint_y: None
					height: 100
					multiline: True

			GridLayout:
				cols:1
                size_hint_y: None
				height: self.minimum_height
				row_default_height: 35
                
                GridLayout:
                    cols:3
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: 35
                    
                    Label:
                        text: 'Ingredient'
                    
                    Label:
                        text: 'Quantity'
                    
                    Label:
                        text: 'Measurement'
                    
                GridLayout:
                    cols:1
                    id: ingredients
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: 35

	GridLayout:
		cols:3
		size_hint: 1, 0.1

		Button:
			text: "Add another ingredient"
			on_press: root.addIngredient()

		Button:
			text: "Remove last ingredient"
			on_press: root.delIngredient()
            
        Button:
            text: "Submit"
            on_press: root.addRecipe()
		

