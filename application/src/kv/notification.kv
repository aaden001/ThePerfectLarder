<Notification>:
	FloatLayout:
		Image:
			source: "graphics/generalbackground.png"
			
	Label:
	    text: "All Sharing Notifications"
	    font_size: 67
	    size_hint: (0.58, 0.2)
	    pos_hint:{'x': .22, 'top': .99}
	    halign: 'center'
	GridLayout:
		cols:1
		padding: [30]
		spacing: [5, 5]
	Button:
	    text: ""
	    font_size: 15
	    color: 1,0,0,1
	    size_hint: (0.2, 0.05)
	    pos_hint:{'x': 0.01, 'top': .99}
	    on_press:
	        root.manager.current = 'homescreen'
	        root.manager.transition.direction = 'right'
	    Image:
		    source:"graphics/back.png"
		    center_x: self.parent.center_x
		    center_y: self.parent.center_y

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        size_hint: (.98,.815)
		pos_hint: {'x': 0.01, 'top': 0.8}

        GridLayout:
            id: notifications
            cols: 1
            row_default_height: 100
            row_force_default: True

	GridLayout:
		cols: 2
		size_hint: (1, .12)
	    
		Button:
			text: "Items About to expire"
			font_size: 65
			color: 0, 0, 255, 1
			on_press: 
				root.manager.transition.direction = 'left' 
				root.manager.current = 'shareitems'	