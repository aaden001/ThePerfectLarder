<HomeScreen>:
    FloatLayout:
        Image:
            source: "graphics/generalbackground.png"
	GridLayout:
		cols:1
		size_hint: 1,1.14
		padding: [30]
		spacing: [10,10]

		GridLayout:
			cols:1

        Button:
            text: 'My Profile'
            font_size: 65
            on_press:
                root.manager.current = 'profile'
                root.manager.transition.direction = 'left'
		
		Button:
            text: 'My Recipes'
            font_size: 65
            on_press:
                root.manager.current = 'recipes'
                root.manager.transition.direction = 'left'
			
		Button:
            text: 'My Inventory'
            font_size: 65
            on_press:
                root.manager.current = 'inventory'
                root.manager.transition.direction = 'left'
			
		Button:
            text: 'My Trends'
            font_size: 65
            on_press:
                root.manager.current = 'trends'
                root.manager.transition.direction = 'left'
			
		Button:
            text: 'My Shopping List'
            font_size: 65
            on_press:
                root.manager.current = 'shoppinglist'
                root.manager.transition.direction = 'left'
			
		Button:
            text: 'Share My Items'
            font_size: 65
            on_press:
                root.manager.current = 'shareitems'
                root.manager.transition.direction = 'left'
        
        
        Button:
            text: 'Notifications'
            font_size: 65
            on_press:
                root.manager.current = 'notification'
                root.manager.transition.direction = 'left'
                        
        Button:
        	text: 'Provide Feedback'
        	font_size: 65
        	on_press:
        	    root.manager.current = 'feedback'
        	    root.manager.transition.direction = 'left'
			
		Button:
            text: 'Logout'
            font_size: 65
            on_press: 
            	root.logout()