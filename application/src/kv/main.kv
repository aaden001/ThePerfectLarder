<HomeScreen>:
    FloatLayout:
        Image:
            source: "graphics/generalbackground.png"
	GridLayout:
		cols:1
		size_hint: 1,1.13
		padding: [30]
		spacing: [5,5]

		GridLayout:
			cols:1
			padding: [20, 20, 20, 20]

        Button:
            text: 'My Profile'
            on_press: root.manager.current = 'profile'
		
		Button:
            text: 'My Recipes'
            on_press: root.manager.current = 'recipes'
			
		Button:
            text: 'My Inventory'
            on_press: root.manager.current = 'inventory'
			
		Button:
            text: 'My Trends'
            on_press: root.manager.current = 'trends'
			
		Button:
            text: 'My Shopping List'
            on_press: root.manager.current = 'shoppinglist'
			
		Button:
            text: 'Share My Items'
            on_press: root.manager.current = 'shareitems'
			
		Button:
            text: 'Logout'
            on_press: 
            	root.manager.current = 'userlogin'