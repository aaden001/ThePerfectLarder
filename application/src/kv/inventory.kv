<Inventory>:
	FloatLayout:
        Image:
            source: "graphics/generalbackground.png"
	Button:
		text: ""
		font_size: 15
		color: 1,0,0,1
		size_hint: (0.2, 0.05)
		pos_hint:{'x': 0.01, 'top': .99}
		on_press: root.manager.current =  'homescreen'
		Image:
			source:"graphics/back.png"
			center_x: self.parent.center_x
			center_y: self.parent.center_y
		
	TextInput:
		id: search
		size_hint: (0.58, 0.05)
		valign: 'middle'
		halign: 'center'
		font_size: 15
		pos_hint:{'x': 0.21, 'top': .99}
	
	Button:
		text: ""
		font_size: 15
		size_hint: (0.2, 0.05)
		pos_hint:{'x': .79, 'top': .99}
		on_press: root.SearchItem()
		Image:
			source:"graphics/search.png"
			center_x: self.parent.center_x
			center_y: self.parent.center_y
		
	Button:
		text: "Add Item"
		font_size: 17
		color: 0, 0, 255, 1
		size_hint: (.98, 0.09)
		pos_hint:{'x': .01, 'top': .105}
		on_press: root.manager.current = 'additem'

	ScrollView:
		do_scroll_x: False
		do_scroll_y: True
		size_hint: (.98, 0.815)
		pos_hint:{'x': 0.01, 'top': 0.93}

		GridLayout:
			id: inventoryID
			cols: 1
			size_hint_y: None
            height: self.minimum_height
            row_default_height: 35

<AddItem>:

	itemName:itemName                #for python code : for kivy code
	quantity:quantity        		 #for python code : for kivy code
	expirationDate:expirationDate    #for python code : for kivy code
	storageLocation:storageLocation  #for python code : for kivy code

	FloatLayout:
        Image:
            source: "graphics/generalbackground.png"
	Button:
		text: ""
		font_size: 15
		color: 1,0,0,1
		size_hint: (0.2, 0.05)
		pos_hint:{'x': 0.01, 'top': .99}
		on_press: root.manager.current = 'inventory'
		Image:
			source:"graphics/back.png"
			center_x: self.parent.center_x
			center_y: self.parent.center_y

    Label:
		text: "Add Item to Inventory"
		font_size: 22
		size_hint: (0.58, 0.05)
		pos_hint:{'x': 0.30, 'top': .99}

	GridLayout:
		cols:1
		height: self.minimum_height
		padding: [3,70]

		GridLayout:
			cols:2

			Label:
			    text: "Item Name: "
                font_size: 15
		        size_hint: (.5,.05)
		        pos_hint:{'x': 0.01}
		        text_size:self.size
                halign:'left'
                valign:'bottom'
					
			TextInput:
				id: itemName
				multiline: False
				size_hint_y: None
				height: 30

		GridLayout:
		    cols:2

			Label:
				text: "Quantity: "
                font_size: 15
		        size_hint: (.5,1)
		        pos_hint:{'x': 0.01}
		        text_size:self.size
                halign:'left'
                valign:'bottom'
					
			TextInput:
				id: quantity
				multiline: False
				pos_hint:{'x': 0.4}
				size_hint_y: None
				height: 30

		GridLayout:
		    cols:2

            Label:
                text: "Measurement: "
                font_size: 15
		        size_hint: (.5,1)
		        pos_hint:{'x': 0.01}
		        text_size:self.size
                halign:'left'
                valign:'bottom'
                
            TextInput:
                id: measurement
				multiline: False
				pos_hint:{'x': 0.4}
				size_hint_y: None
				height: 30

		GridLayout:
		    cols:2

			Label:
				text: "Expiration Date: "
                font_size: 15
		        size_hint: (.5,1)
		        pos_hint:{'x': 0.01}
		        text_size:self.size
                halign:'left'
                valign:'bottom'
					
			TextInput:
				id: expirationDate
				multiline: False
				pos_hint:{'x': 0.4}
				size_hint_y: None
				height: 30

		GridLayout:
		    cols:2

			Label:
		        text: "Storage Location: "
                font_size: 15
		        size_hint: (.45,1)
		        pos_hint:{'x': 0.01}
		        text_size:self.size
                halign:'left'
                valign:'bottom'
					
			Spinner:
				id: storageLocation
				text: "Pantry"
                values: ["Pantry", "Refrigerator", "Freezer", "Other"]
				pos_hint:{'x': 0.4}
				size_hint_y: None
				height: 30

	GridLayout:
		cols:3
		size_hint: (.98, 0.1)
		pos_hint:{'x': .01, 'top': .105}

        Button:
            text: "Submit"
            halign:'center'
            valign:'middle'
            font_size: 15
			on_press: root.addItems()
	
<DeleteItem>:

	GridLayout:
		id: del
		cols:1
		size: root.width, root.height
		
		Label:
			id: name
			
		Label:
			id: exp
			
		Label:
			id: quantity
			
		Label:
			id: loc
			
		GridLayout:
			cols:2
			
			Label:
				text: "Quantity Used"
				
			TextInput:
				id: used
				multiline: False
				
		Button:
			text: "Submit"
			on_press: root.deleteItems()
			
		Button:
			text:"Back"
			on_press: root.manager.current = 'inventory' 			
				

<SearchItem>:
	itemName:itemName                #for python code : for kivy code
	GridLayout:
		cols:1
		size: root.width, root.height
		GridLayout:
			cols:2
			
			Label:
				text: "Item Name: "
					
			TextInput:
				id: itemName
				multiline: False

		Button:
			text:"Submit"
			on_press: root.searchForItem()
		Button:
			text:"Back"
			on_press: root.manager.current = 'inventory'
