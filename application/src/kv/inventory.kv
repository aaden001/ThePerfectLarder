<Inventory>:
	FloatLayout:
        Image:
            source: "graphics/generalbackground.png"
	Button:
		text: ""
		font_size: 15
		color: 1,0,0,1
		size_hint: (0.2, 0.05)
		pos_hint:{'x': 0.01, 'top': .99}
		on_press: root.manager.current =  'homescreen'
		Image:
			source:"graphics/back.png"
			center_x: self.parent.center_x
			center_y: self.parent.center_y
		
	TextInput:
		id: search
		size_hint: (0.58, 0.05)
		valign: 'middle'
		halign: 'center'
		font_size: 15
		pos_hint:{'x': 0.21, 'top': .99}
	
	Button:
		text: ""
		font_size: 15
		size_hint: (0.2, 0.05)
		pos_hint:{'x': .79, 'top': .99}
		on_press: root.SearchItem()
		Image:
			source:"graphics/search.png"
			center_x: self.parent.center_x
			center_y: self.parent.center_y
		
	Button:
		text: "Add Item"
		font_size: 17
		color: 0, 0, 255, 1
		size_hint: (.98, 0.09)
		pos_hint:{'x': .01, 'top': .105}
		on_press: root.manager.current = 'additem'

	ScrollView:
		do_scroll_x: False
		do_scroll_y: True
		size_hint: (.98, 0.815)
		pos_hint:{'x': 0.01, 'top': 0.93}

		GridLayout:
			id: inventoryID
			cols: 1
			size_hint_y: None
            height: self.minimum_height
            row_default_height: 35

<AddItem>:

	itemName:itemName                #for python code : for kivy code
	quantity:quantity        		 #for python code : for kivy code
	expirationDate:expirationDate    #for python code : for kivy code
	storageLocation:storageLocation  #for python code : for kivy code
	
	GridLayout:
		cols:1
		size: root.width, root.height
		GridLayout:
			cols:2
			
			Label:
				text: "Item Name: "
					
			TextInput:
				id: itemName
				multiline: False
					
			Label:
				text: "Quantity: "
					
			TextInput:
				id: quantity
				multiline: False
                
            Label:
                text: "Measurement: "
                
            TextInput:
                id: measurement
                multiline: False
					
			Label:
				text: "Expiration Date: "
					
			TextInput:
				id: expirationDate
				multiline: False
			
			Label:
				text: "Storage Location: "
					
			Spinner:
				id: storageLocation
				text: "Pantry"
                values: ["Pantry", "Refrigerator", "Freezer", "Other"]
                size_hint: None, None
                size: 400, 25
                pos_hint:{'center_x':.5, 'top': 1}

		Button:
			text:"Submit"
			on_press: root.addItems() 
			
		Button:
			text:"Back"
			on_press: root.manager.current = 'inventory' 
	
	
<DeleteItem>:

	GridLayout:
		id: del
		cols:1
		size: root.width, root.height
		
		Label:
			id: name
			
		Label:
			id: exp
			
		Label:
			id: quantity
			
		Label:
			id: loc
			
		GridLayout:
			cols:2
			
			Label:
				text: "Quantity Used"
				
			TextInput:
				id: used
				multiline: False
				
		Button:
			text: "Submit"
			on_press: root.deleteItems()
			
		Button:
			text:"Back"
			on_press: root.manager.current = 'inventory' 			
				
				
<ViewInventory>:
	Button:
		text:"View Inventory"
		on_press: root.viewinventory()
	
	Button:
		text:"Back"
		on_press: root.manager.current = 'inventory'

<SearchItem>:
	itemName:itemName                #for python code : for kivy code
	GridLayout:
		cols:1
		size: root.width, root.height
		GridLayout:
			cols:2
			
			Label:
				text: "Item Name: "
					
			TextInput:
				id: itemName
				multiline: False

		Button:
			text:"Submit"
			on_press: root.searchForItem()
		Button:
			text:"Back"
			on_press: root.manager.current = 'inventory'
