<Inventory>:
	spacing: [10,10]
	FloatLayout:
		Image:
            source: "graphics/generalbackground.png"

	Button:
		text: " "
		size_hint: (0.2, 0.07)
		pos_hint:{'x': 0.01, 'top': .99}
		on_press: root.manager.current =  'homescreen'
		on_press: root.ids.search.text = ""
		Image:
			source:"graphics/back.png"
			center_x: self.parent.center_x
			center_y: self.parent.center_y
		
	TextInput:
		id: search
		size_hint: (0.58, 0.07)
		halign: 'center'
		font_size: 75
		pos_hint:{'x': 0.21, 'top': .99}
	
	Button:
		text: " "
		size_hint: (0.2, 0.07)
		pos_hint:{'x': .79, 'top': .99}
		on_press: root.SearchItem()
		Image:
			source:"graphics/search.png"
			center_x: self.parent.center_x
			center_y: self.parent.center_y
		
	Button:
		text: "Add Item"
		font_size: 65
		size_hint: (.98, 0.09)
		pos_hint:{'x': .01, 'top': .105}
		on_press: root.manager.current = 'additem'

	ScrollView:
		do_scroll_x: False
		do_scroll_y: True
		size_hint: (.98,.815)
		pos_hint:{'x': 0.01, 'top': 0.92}

		GridLayout:
			id: inventoryID
			cols: 1
			size_hint_y: None
            height: self.minimum_height
            row_default_height: 175

<AddItem>:

	itemName:itemName                #for python code : for kivy code
	quantity:quantity        		 #for python code : for kivy code
	expirationDate:expirationDate    #for python code : for kivy code
	storageLocation:storageLocation  #for python code : for kivy code

	FloatLayout:
        Image:
            source: "graphics/generalbackground.png"
	Button:
		text: ""
		font_size: 15
		color: 1,0,0,1
		size_hint: (0.2, 0.05)
		pos_hint:{'x': 0.01, 'top': .99}
		on_press: root.manager.current = 'inventory'
		on_press: root.clearFieldsAdd()
		Image:
			source:"graphics/back.png"
			center_x: self.parent.center_x
			center_y: self.parent.center_y

    Label:
		text: "Add Item to Inventory"
		font_size: 67
		size_hint: (0.58, 0.05)
		pos_hint:{'x': 0.30, 'top': .99}

	GridLayout:
		cols:1
		size_hint: (.98, 0.8)
        pos_hint:{'x': 0.01, 'top': .92}
		halign: 'left'
			
		GridLayout:
			cols:2
			size_hint: (0.50, 0.12)

			Label:
			    text: "Item Name: "
                font_size: 65
					
			TextInput:
				id: itemName
				multiline: False
				font_size: 65
				halign: 'center'

		GridLayout:
		    cols:2
			size_hint: (0.50, 0.12)

			Label:
				text: "Quantity: "
                font_size: 65
					
			TextInput:
				id: quantity
				multiline: False
				font_size: 65
				halign: 'center'

		GridLayout:
		    cols:2
			size_hint: (0.50, 0.12)

            Label:
                text: "Measurement: "
                font_size: 65
            
            Spinner:
                id: measurement
				font_size: 65

		GridLayout:
		    cols:2
			size_hint: (0.50, 0.12)

			Label:
				text: "Expiration Date: "
                font_size: 65
					
			TextInput:
				id: expirationDate
				multiline: False
				font_size: 65
				halign: 'center'

		GridLayout:
		    cols:2
			size_hint: (0.50, 0.12)

			Label:
		        text: "Storage Location: "
                font_size: 65

			Spinner:
				id: storageLocation
                font_size: 65
                values: ["Pantry", "Refrigerator", "Freezer", "Other"]
	GridLayout:
		cols:1
		size_hint: (.98, 0.1)
		pos_hint:{'x': .01, 'top': .105}

        Button:
            text: "Submit"
            halign:'center'
            valign:'middle'
            font_size: 65
			on_press: root.addItems()
	
<DeleteItem>:
	FloatLayout:
        Image:
            source: "graphics/generalbackground.png"
	Button:
		text: ""
		font_size: 15
		color: 1,0,0,1
		size_hint: (0.2, 0.05)
		pos_hint:{'x': 0.01, 'top': .99}
		on_press: root.manager.current =  'inventory'
		on_press: root.clearFieldsDel()
		Image:
			source:"graphics/back.png"
			center_x: self.parent.center_x
			center_y: self.parent.center_y		
    Label:
		text: "My Inventory"
		font_size: 67
		size_hint: (0.58, 0.05)
		pos_hint:{'x': 0.30, 'top': .99}

	GridLayout:
		id: del
		cols:1
		size_hint: (.98, 0.8)
        pos_hint:{'x': 0.01, 'top': .92}
			
		GridLayout:
			cols:2
			size_hint: (0.50, 0.12)
			
			Label:
				text: "Item:"
				font_size: 65

			Label:
				id: name
				font_size: 65
				
			Label:
				text: "Expiration Date:"
				font_size: 65
			
			Label:
				id: exp
				font_size: 65
			
			Label:
				text: "Quantity:"
				font_size: 65
			
			Label:
				id: quantity
				font_size: 65
			
			Label:
				text: "Location:"
				font_size: 65
			
			Label:
				id: loc
				font_size: 65
			
			Label:
				text: "Quantity Used:"
				font_size: 65
				
			TextInput:
				id: used
				multiline: False
				halign: 'center'
				font_size: 65
            
            Label:
                text: "Used or Expired?"
				font_size: 65
            
            Spinner:
                id: useType
                values: 'Used', 'Expired'
				font_size: 65
                
		GridLayout:
			cols:1
			size_hint: (.98, 0.1)
			pos_hint:{'x': .01, 'top': .105}

        	Button:
            	text: "Submit"
            	halign:'center'
            	valign:'middle'
            	font_size: 65
				on_press: root.deleteItems()			
				
<SearchItem>:
	itemName:itemName                #for python code : for kivy code
	GridLayout:
		cols:1
		size: root.width, root.height
		GridLayout:
			cols:2
			
			Label:
				text: "Item Name: "
					
			TextInput:
				id: itemName
				multiline: False

		Button:
			text:"Submit"
			on_press: root.searchForItem()
		Button:
			text:"Back"
			on_press: root.manager.current = 'inventory'
