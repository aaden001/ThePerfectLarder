    FloatLayout:
        Image:
            source: "graphics/generalbackground.png"

    Button:
        text: " "
        size_hint: (0.2, 0.07)
        pos_hint:{'x': 0.01, 'top': .99}
        on_press:
            root.backButton()
            root.manager.transition.direction = 'right'
        Image:
            source:"graphics/back.png"
            center_x: self.parent.center_x
            center_y: self.parent.center_y

    Label:
        text: "Share Items"
        font_size: 67
        size_hint: (0.58, 0.05)
        pos_hint:{'x': .22, 'top': .99}
        halign: 'center'

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        size_hint: (.98,.815)
		pos_hint: {'x': 0.01, 'top': 0.92}

        GridLayout:
            id: shareFoodItems
            cols: 1
            row_default_height: 100
            row_force_default: True

